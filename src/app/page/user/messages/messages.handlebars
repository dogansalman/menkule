<div class="container">
    {{#each messages}}
        <div class="col-xs-12 disable_padding">
            <a href='/user/messages/{{id}}'>
                <div class='messagelist-container'>
                    <div class='message-container col-xs-2 col-sm-3 col-md-3'>
                        <div class='col-xs-3 hidden-sm hidden-xs'> <img class='message-profile' src='{{#image user.photo 150 150 }} {{/image}}' />
                        </div>
                        <div class='disable_padding col-md-9 col-sm-9 col-xs-2'> <img class='message-profilemobile visible-xs' src='{{#image user.photo 150 150 }} {{/image}}' /> <span class='message-sendername'>{{user.fullname}}</span>
                            <span class='message-date'> {{date date "D MMMM YYYY, dddd" }} </span>
                        </div>
                    </div>
                    <div class='message-text col-xs-10 col-sm-9 col-md-9'>
                        <p>
                            {{#if last_view}} {{else}} <span class="newmessage">yeni</span> {{/if}}
                            <b>{{message.fullname}}:</b> {{message.message}}
                        </p>
                        <span class='message-time'> {{fromNow message.date}} </span>
                    </div>
                </div>
            </a>
        </div>
        <div style="clear:both"></div>
    {{else}}
        {{{appMessages 'message_not_found'}}}
    {{/each}}
</div>