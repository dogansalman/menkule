<div class='col-xs-3 col-sm-2 col-md-1 photo'>
    <img alt='photo' src='{{#image image 150 150 }} {{/image}}' />
</div>
<div class='col-xs-9 col-sm-10 col-md-11 detail'>
    <a href='/user/advert/detail/{{advert.id}}'>
        <div class='col-xs-12 col-sm-12 col-md-12 text'>
            <h2 class='title'> {{advert.title}} <b>#{{advert.id}}</b> </h2>
            <span class='location'> {{advert_type.name}}  {{city.name}} / {{town.name}} </span>
        </div>
    </a>
</div>