{{#each adverts}}
    {{#unless selected}}
        <div data-index="{{getIndex @index}}" class="advert list col-xs-12">
            <div class='col-xs-3 col-sm-2 col-md-1 photo'> <img alt='photo' src='{{#image image 150 150 }} {{/image}}' /> </div>
            <div class='col-xs-9 col-sm-10 col-md-11 detail'>
                <div class='col-xs-12 col-sm-12 col-md-12 text'>
                    <h2 class='title'><a class="link" href="/advert/{{advert.id}}" target="_blank">#{{advert.id}}</a> {{advert.title}} {{#if new_rezervation}}  <span class="new">{{new_rezervation}} yeni</span> {{/if}} </h2>
                    <span class='location'>  {{advert_type.name}}  {{city.name}} / {{town.name}} </span>
                </div>
            </div>
        </div>
    {{/unless}}
{{/each}}
<div data-index="-1" class="advert list col-xs-12">
    <div class='col-xs-12 col-sm-12 col-md-12'>
        <p class="disable_margin text-center" style="padding: 17px 0px 0px 10px;">Rezervasyonlarını incelemek istediğiniz ilanınızı seçin.</p>
        <p  class="disable_margin text-center" style="font-size:11px"> Onay bekleyen tüm rezervasyon taleplerini görüntüle. </p>
    </div>
</div>
