{{#each adverts}}
    {{#unless selected}}
        <div data-index="{{getIndex @index}}" class="advert list col-xs-12">
            <div class='col-xs-3 col-sm-2 col-md-2 photo'> <img alt='photo' src='{{#image image 150 150 }} {{/image}}' /> </div>
            <div class='col-xs-9 col-sm-10 col-md-10 detail'>
                <div class='col-xs-12 col-sm-12 col-md-12 text'>
                    <h2 class='title'><a class="link" href="/user/advert/{{advert.id}}" target="_blank">#{{advert.id}}</a>  {{advert.title}} </h2>
                    <span class='location'> {{advert_type.name}}  {{city.name}} / {{town.name}} </span>
                </div>
            </div>
        </div>
    {{/unless}}
{{/each}}